<div class="container">
    <h2>Not Devoured</h2>
    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger-block devoured=true}}
        {{/unless}}
        {{/each}}
    </ul>

    <h2>Devoured</h2>
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger-block devoured=false}}
        {{/if}}
        {{/each}}
    </ul>

    <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <textarea class="form-control" id="burger_name" name="burger_name" rows="3"></textarea>
        </div>

