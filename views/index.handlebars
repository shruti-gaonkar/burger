<h1>Your burgers</h1>

<h2>Not Devoured</h2>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Not Devoured</h2>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>